//header
header.header.show
  .container.header__container
    a.logo(href=process.env.MAIN_LINK) Ditto logo
      +icon("logo")
    .menu__wrapper.header__menu
      a.logo.menu__logo(href=process.env.MAIN_LINK) Ditto logo
        +icon("logo")
      button.menu__close x
      nav
        ul.menu
          li.menu__item
            span.menu__link.menu__link_submenu Discover
              +icon('chevron')
            ul.menu__submenu
              li.menu__subitem
                a(href="./#cases").menu__sublink
                  +icon('cases')
                  | Use cases
              li.menu__subitem
                a(href=process.env.HEADER_LINK_DOCS target="_blank").menu__sublink
                  +icon('docs')
                  | Documentation
                  +icon('arrow-diag')
              li.menu__subitem
                a(href=process.env.HEADER_LINK_BLOG).menu__sublink
                  +icon('blog')
                  | Blog
                  +icon('arrow-diag')
              li.menu__subitem
                a(href=process.env.HEADER_LINK_CAREERS).menu__sublink
                  +icon('career')
                  | Careers
          li.menu__item
            a.menu__link(href="./#platform") Products
          li.menu__item
            a.menu__link(href=process.env.HEADER_LINK_CONTACTS) Contact us
      ul.soc-list.menu__soc
        li.soc-list__item
          a.soc-list__link(href=process.env.SOC_TWITTER) twitter
            +icon('tw')
        li.soc-list__item
          a.soc-list__link(href=process.env.SOC_DISCORD) discord
            +icon('dc')
        li.soc-list__item
          a.soc-list__link(href=process.env.SOC_TELEGRAM) telegram
            +icon('tg-f')
        li.soc-list__item
          a.soc-list__link(href=process.env.SOC_GITHUB) github
            +icon('g-hub')
      a(href=process.env.LINK_APP).btn.btn_third.header__btn #{process.env.TEXT_LINK_APP}
    button.header__burger menu button
      +icon('burger')

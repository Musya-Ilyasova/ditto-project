//first-screen
section.first-sc
  .container.first-sc__container
    .first-sc__left
      h1.first-sc__title Automation infrastructure
        br
        | for&nbsp;
        span.first-sc__slider.keen-slider
          span.keen-slider__slide smart contracts
          span.keen-slider__slide(style="display: none") scheduled transactions
          span.keen-slider__slide(style="display: none") notifications
          span.keen-slider__slide(style="display: none") data streams
      p.first-sc__text Empowering Web3 users to seamlessly connect to&nbsp;
        span.main any application
        | &nbsp;and automate any workflow both on- and off-chain
      a(href="#").btn.btn_primary Create Task
    .first-sc__right
      picture.first-sc__img_mobile
        source(srcset="./img/first-sc/first-sc@2x.webp" type="image/webp")
        img(src="./img/first-sc/first-sc@2x.png", alt="")
      .first-sc__img_desktop
        picture
          source(srcset="./img/first-sc/first-sc-1@2x.webp" type="image/webp")
          img(src="./img/first-sc/first-sc-1@2x.jpg", alt="Automation infrastructure img")
        picture
          source(srcset="./img/first-sc/first-sc-2@2x.webp" type="image/webp")
          img(src="./img/first-sc/first-sc-2@2x.jpg", alt="Automation infrastructure img")


